# Server Configuration
PORT=4000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster-url/dbname

# Firebase Admin SDK Configuration
# You'll need to download a service account key from Firebase console
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/firebase-credentials.json

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=7d

# OpenAI Configuration (for Bubl's text responses)
OPENAI_API_KEY=your_openai_api_key

# AWS Configuration (for voice synthesis with Amazon Polly)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000 